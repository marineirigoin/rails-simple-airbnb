<%= render 'layouts/banner' %>

<div class="container" >
  <div class="row">
      <% @flats.each do |flat| %>
        <div class="card-flat center-block col-5 m-4">
        <h2> <%= flat.name %> </h2>
        <p> <%= flat.description %> </p>
        <div class="address"> <%= flat.address %> </div>
        <div class="price"><%= flat.price_per_night %> euros per night </div>
        <div class="people"><%= flat.number_of_guests %> guests </div>
        <div class="btn">
        <%= link_to "See details", flat_path(flat)%>
  </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="btn">
    <%= link_to "Create a new flat", new_flat_path%>
  </div>
</div>
